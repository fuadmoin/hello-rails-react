<div class=" rounded-md bg-gray-100  p-10  shadow-sm ">
<h2 class="font-bold text-center">Messages</h2>
<% count = 0%>
<% @messages.each do |message|%>

 <div class="hover:bg-blue-500 flex items-center bg-white mb-4 p-4 rounded-md shadow-sm mt-3 ">
 <p class="font-bold " >Message <%=count+=1%>: <%= message.message_content%>  </p>
    </div>
<% end %>


<h3 class="font-bold text-center mt-5">Create a message</h3>
<%= form_with(model: @message, local: true) do |form| %>
<%= form.text_area :message_content, placeholder: "Enter Your message name", required: true, class:"block all-in-one-label border  round-md bg-transparent py-1.5 pl-1  sm:text-sm sm:leading-6 w-96" %>
<div class=" w-40 border-solid border-black hover:bg-blue-400  block rounded-md bg-green-500 text-white text-sm font-medium p-5 py-2 shadow-sm mt-5">
    <%= form.submit %>
  </div>
<% end %>

</div>
